{
  "name": "Orquestra Dev Project Container",
  "image": "hub.orquestra.wtf/orquestra-studio-dev/orquestra-studio:0.10.1",
  "settings": {
    "python.pythonPath": "/home/orquestra/.miniconda3/bin/python",
    "python.languageServer": "Pylance",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "remote.autoForwardPorts": false
  },
  "extensions": ["ms-python.python", "/opt/orquestra-studio.vsix"],
  "forwardPorts": [3000, 8265, 8000, 9000],
  "overrideCommand": false,
  "runArgs": ["--shm-size=512m"]
}
